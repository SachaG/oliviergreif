---
import {  getActualites } from '../../helpers';

import Layout from '../../layouts/Layout.astro';
---

<Layout title="Actualités">
    <h2>Actualités</h2>
    {(getActualites()).map(({ id,titre, date, texte}) => <div>
        <h3><a href={id}>{titre}</a></h3>
        <h5>{date}</h5>
        <div set:html={texte}></div>
        <hr/>
    </div>)}
</Layout>