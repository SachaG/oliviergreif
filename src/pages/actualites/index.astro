---
import Actualite from "../../components/actualites/Actualite.compact.astro";
import PageLayout from "../../components/layouts/PageLayout.astro";
import {
	getActualites,
	getConcerts,
	getString,
	SectionId,
} from "../../helpers";
import Layout from "../../layouts/Layout.astro";

const actualites = getActualites();
---

<Layout title={getString("actualites")?.t}>
	<PageLayout sectionId="actualites">
		{
			actualites.map(({ id }) => (
				<div slot="page-content">
					<Actualite id={id} />
				</div>
			))
		}
	</PageLayout>
</Layout>
