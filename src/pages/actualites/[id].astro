---
import Actualite from "../../components/actualites/Actualite.astro";
import {
	getActualite,
	getActualites,
	getItemsStaticPaths,
} from "../../helpers";
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
	return getItemsStaticPaths(getActualites());
}

const { id } = Astro.params;
const actualite = getActualite(id);
const { titre } = actualite;
---

<Layout title={titre}>
	<Actualite id={id} />
</Layout>
