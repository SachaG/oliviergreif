---
import Actualite from "../../components/actualites/Actualite.astro";
import { getActualiteBySlug, getActualites, getString } from "../../content";
import { getItemsStaticPaths } from "../../helpers";
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
	return getItemsStaticPaths(getActualites());
}

const { id: slug } = Astro.params;
const actualite = getActualiteBySlug(slug)!;
const { id } = actualite;
---

<Layout title={getString("actualites")?.t}>
	<Actualite id={id} />
</Layout>
