---
import Oeuvre from "../../components/catalogue/Oeuvre.astro";
import { getCatalogue, getOeuvre, getItemsStaticPaths } from "../../helpers";
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
	return getItemsStaticPaths(getCatalogue());
}

const { id } = Astro.params;
const oeuvre = getOeuvre(id);
const { titre, commentaire } = oeuvre;
---

<Layout title="Welcome to Astro.">
	<Oeuvre id={id} />
</Layout>
