---
import { getEditeur, getEditeurs, getItemsStaticPaths } from "../../helpers";
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
	return getItemsStaticPaths(getEditeurs());
}

const { id } = Astro.params;
const editeur = getEditeur(id);
const { titre, commentaire } = editeur;
---

<Layout title={titre}>
	<h1>
		{titre}
	</h1>

	<div set:html={commentaire} />
</Layout>
