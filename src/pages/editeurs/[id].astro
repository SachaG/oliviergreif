---
import Editeur from "../../components/editeurs/Editeur.astro";
import { getEditeurBySlug, getEditeurs } from "../../content";
import { getItemsStaticPaths } from "../../helpers";
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
	return getItemsStaticPaths(getEditeurs());
}

const { id: slug } = Astro.params;
const editeur = getEditeurBySlug(slug)!;
const { titre, id } = editeur;
---

<Layout title={titre}>
	<Editeur id={id} />
</Layout>
