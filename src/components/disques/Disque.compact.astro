---
import { getDisque, getPath } from "../../content";
import CatalogueRelated from "../catalogue/CatalogueRelated.compact.astro";
import FeedItemHeading from "../FeedItemHeading.astro";
import DisqueCover from "./DisqueCover.astro";
const { id } = Astro.props;
const disque = getDisque(id);
const {
	titre,
	oeuvres,
	image,
	// commentaire,
	annee,
	// interpretes_disque,
	// maison,
} = disque;
---

<div class="disque-compact">
	{image ? <DisqueCover id={id} /> : <div class="disque-image-placeholder" />}
	<div class="disque-compact-content">
		<h4>{annee}</h4>
		<FeedItemHeading path={getPath(disque)} content={titre} />
		<!-- {oeuvres && <CatalogueRelated oeuvres={oeuvres} />} -->
	</div>
</div>

<style>
	.disque-compact {
		/* display: grid;
		grid-template-columns: 1fr 200px;
		gap: var(--spacing); */
		display: flex;
		flex-direction: column;
		gap: var(--spacing);
	}
	.disque-compact-image {
		&,
		& img {
			display: block;
		}
	}
	h4 {
		margin-bottom: var(--quarterSpacing);
	}
	.disque-image-placeholder {
		background: #00000033;
		width: 100%;
		aspect-ratio: 1/1;
	}
</style>
