---
import { getActualite, getPath } from "../../content";
import { truncateWords } from "../../helpers";
import Date from "../Date.astro";
import FeedItemHeading from "../FeedItemHeading.astro";

const { id, truncate = false } = Astro.props;
const actualite = getActualite(id);
const { titre, texte, date } = actualite;

const texte_ = truncate ? truncateWords(texte, 10) + "â€¦" : texte;
---

<div>
	<Date date={date} />
	<FeedItemHeading path={getPath(actualite)} content={titre} />
	<div set:html={texte_} />
</div>
