---
import { getConcerts, getPath, getSectionPath, SectionId } from "../../content";
import Date from "../Date.astro";
import FeedItemHeading from "../FeedItemHeading.astro";
import T from "../T.astro";
import Concert from "./Concert.compact.astro";

const concerts = getConcerts();
const concert = concerts.at(0)!;

const {
	date,
	titre,
	oeuvres,
	// interpretes,
	// adresse,
	// commentaire,
} = concert;
---

<section>
	<div class="concerts-section-contents">
		<Date date={date} format="short" />
		<FeedItemHeading path={getPath(concert)} content={titre} />
	</div>
	<a
		class="home-section-link link-heading"
		href={getSectionPath(SectionId.CONCERTS)}><T k="voir_plus" /></a
	>
</section>

<style>
	h3 {
		font-size: 0.9rem;
	}
</style>
