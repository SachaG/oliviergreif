---
import { convertTitle, getOeuvre, getPath } from "../../helpers";

interface Props {
	titres?: string[];
}

const { titres } = Astro.props;
---

{
	titres && titres.length > 0 ? (
		<div>
			<ul class="items-list">
				{titres.map((titre) => {
					const oeuvre = getOeuvre(convertTitle(titre));
					return (
						<li>
							<a href={getPath(oeuvre)}>{titre}</a>
						</li>
					);
				})}
			</ul>
		</div>
	) : null
}
