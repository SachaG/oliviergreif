---
import { getCatalogue, getEditeur, getPath } from "../../helpers";

const { id } = Astro.props;
const editeur = getEditeur(id);
const { titre, commentaire } = editeur;

const oeuvres = getCatalogue().filter((oeuvre) => oeuvre.editeur === titre);
---

<div>
	<h1>
		{titre}
	</h1>

	<div set:html={commentaire} />
	<h4>Oeuvres</h4>
	<ul>
		{
			oeuvres.map((oeuvre) => (
				<li>
					<a href={getPath(oeuvre)}>{oeuvre.titre}</a>
				</li>
			))
		}
	</ul>
</div>
